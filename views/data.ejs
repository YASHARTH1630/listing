<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Listings</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-100 min-h-screen pt-16">

    <nav class="fixed top-0 left-0 w-full bg-blue-600 text-white shadow-lg z-50">
        <div class="max-w-7xl mx-auto px-6 py-3 flex items-center justify-between">

            <!-- Brand -->
            <div class="text-xl font-bold tracking-wide">
                üåç Travels Listing
            </div>

            <!-- Right Section -->
            <div class="flex items-center gap-4">

                <!-- Home -->
                <a href="/listening" class="hover:text-yellow-300 transition font-medium">
        Home
      </a>

                <!-- Add New -->
                <a href="/new_list" class="hover:text-yellow-300 transition font-medium">
        Add New Place
      </a>

                <!-- Sort -->
                <form method="GET" action="/listening">
                    <select name="sort" onchange="this.form.submit()" class="bg-blue-500 text-white px-3 py-1.5 rounded-md border border-blue-400
                 focus:outline-none focus:ring-2 focus:ring-yellow-300 cursor-pointer">
          <option value="">Sort by</option>
          <option value="price_asc">Price: Low ‚Üí High</option>
          <option value="price_desc">Price: High ‚Üí Low</option>
        </select>
                </form>

                <!-- Search -->
                <form method="GET" action="/listening" class="flex">
                    <input type="text" name="search" placeholder="Search places..." class="px-3 py-1.5 rounded-l-md text-gray-800
                 focus:outline-none focus:ring-2 focus:ring-yellow-300" />
                    <button class="bg-yellow-400 text-blue-900 px-4 py-1.5 rounded-r-md
                 hover:bg-yellow-300 transition font-medium">
          Search
        </button>
                </form>

                <!-- Auth Links -->
                <% if(!currUser) { %>
                    <a href="/signup" class="hover:text-yellow-300 font-medium">Sign Up</a>
                    <a href="/signup/login" class="hover:text-yellow-300 font-medium">Login</a>
                    <% } %>

                        <% if(currUser) { %>
                            <a href="/signup/logout" class="hover:text-red-300 font-medium">Logout</a>
                            <% } %>

            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="max-w-7xl mx-auto px-6 py-10">

        <% if(success && success.length){ %>
            <h3 class="text-green-600 font-medium mb-3">
                <%= success %>
            </h3>
            <% } %>

                <% if(error && error.length){ %>
                    <h3 class="text-red-600 font-medium mb-3">
                        <%= error %>
                    </h3>
                    <% } %>

    </div>

    <!-- Heading -->
    <h1 class="text-4xl font-bold text-center text-slate-800 mb-10">
        üåç Travel Listings
    </h1>
    <section class="w-full bg-gradient-to-r from-sky-600 via-indigo-600 to-purple-600 text-white">
        <div class="max-w-7xl mx-auto px-6 py-16 flex flex-col md:flex-row items-center justify-between">

            <!-- Text -->
            <div class="mb-8 md:mb-0">
                <h1 class="text-4xl md:text-5xl font-extrabold mb-4">
                    Share Your Next Destination üåç
                </h1>
                <p class="text-lg text-white/90 max-w-xl">
                    Add a new place and let travelers explore unique stays across the world.
                </p>
            </div>

            <!-- CTA Button -->
            <a href="/new_list" class="inline-flex items-center gap-3 bg-white text-gray-900 px-8 py-4 rounded-full text-lg font-semibold shadow-xl hover:scale-105 transition">
            ‚ûï Add New Place
            </a>

        </div>
    </section>

    <!-- Grid -->
    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% listings.forEach(listing => { %>
            <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg transition">
                <!-- Image -->
                <img src="<%= listing.image.url %>" alt="listing image" class="w-full h-56 object-cover">

                <!-- Content -->
                <div class="p-5">
                    <!-- Title -->
                    <h2 class="text-xl md:text-2xl lg:text-3xl font-semibold text-slate-800 mb-2">
                        <%= listing.title %>
                    </h2>

                    <!-- Description -->
                    <p class="text-sm md:text-base lg:text-lg text-slate-600 mb-4 line-clamp-3">
                        <%= listing.description %>
                    </p>

                    <!-- Location -->
                    <p class="text-sm text-slate-500 mb-3">
                        üìç <span class="font-medium"><%= listing.location %></span>,
                        <%= listing.country %>
                    </p>

                    <!-- Price + Actions -->
                    <div class="flex justify-between items-center mt-4">
                        <span class="text-lg font-bold text-emerald-600">
            ‚Çπ <%= listing.price %> / night
          </span>
                        <a href="/listing/<%=listing.id%>" class="px-4 py-2 text-sm rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition">
            View
          </a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
    </div>

</body>

</html>